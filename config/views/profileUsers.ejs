
<!doctype html>
<html lang="pt-br">
  <head>
  <% include partials/head %>
  </head>


	<body>
    <% include partials/menu %>
    <!-- Begin page content -->
    <main role="main" class="container">
		<div class="container mt-5 mb-5">
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <%if (accountUser[0].photo) { %>
			                    <img src="../img/<%=accountUser[0].photo%>" class="rounded-circle img-thumbnail">
                            <%} else { %>
                                <img src="../img/null.svg" class="rounded-circle img-thumbnail">
                            <%} %>
                            <strong class="d-inline-block mb-2 text-primary"><%=accountUser[0].fullname%></strong>
                            <h3 class="mb-0">
								<a class="text-dark" href="#"><%=accountUser[0].profile%></a>
							</h3>
                            <%if (accountUser[0].idade) { %>
								<div class="mb-1 text-muted">
									<%=accountUser[0].idade%> anos
								</div>
                            <%} %>
                                <p class="card-text mb-auto">
                                    <%- accountUser[0].description%>
                                </p>
						</div>
                    </div>
				</div>
                <div class="col-md-6">
                       <br>
                        <h4>Meu cardápio</h4>
						  <ul class="timeline">
							<% for(var i = 0; i < feedUser.length; i++){ %>
							<li>
							  <div class="card">
								<%if (feedUser[i].photo) { %>
								<img class="card-img-top" src="../img/<%=feedUser[i].photo%>">
								<%}%>
								  <div class="card-body">
									<h5 class="card-title text-primary"><%= feedUser[i].title %></h5>
									<p class="card-text">
									  <%- feedUser[i].post %>
									</p>
								  </div>
								  <ul class="list-group list-group-flush">
									<li class="list-group-item">                  
									  <i class="fa fa-balance-scale">&nbsp;</i><%= feedUser[i].portion %>&nbsp;Porções
									  <p class="float-right"><i class="fa fa-clock-o"></i>&nbsp;<%= feedUser[i].preparation_time %>&nbsp;Minutos</p>
									</li>                
									<li class="list-group-item">
									  <a href="/profile/<%= feedUser[i].id_account %>"><%= feedUser[i].fullname %></a>
									  <a href="#" class="float-right"><%= feedUser[i].date_post %></a>
									</li>
								  </ul>
								  <div class="card-body">
									<form action="/recipe/<%= feedUser[i].id_publication %>">
									  <button class="btn-danger">
										<i class="fa fa-heart"></i>
									  </button>
									</form>
								  </div>
								</div>
							  </li>
							<% } %>
						  </ul>
                    </div>
                    <div class="col-md-3">
					<div class="card flex-md-row mb-4 box-shadow h-md-250">
			      <div class="card-body">
				      <strong class="d-inline-block mb-2 text-primary">Prato do dia</strong>
				      <h3 class="mb-0">
				        <a class="text-dark" href="/profile/<%= news[0].id_account %>">
		              <%= news[0].fullname %>
		            </a>
				      </h3>
				      <div class="mb-1 text-muted">
		            <%= news[0].title %>
		          </div>          
		  		      <p class="card-text">
		              <%- news[0].post %>
		            </p>
				      <a href="#">Continue lendo</a>
			      </div>
		      </div>
		</div>
                </div>
            </div>
        </main>
        <footer class="footer">
            <div class="container">
                <!-- FOOTER -->
            </div>
        </footer>
        <% include partials/footer %>
	</body>
</html>