
<!doctype html>
<html lang="pt-br">
	<head>
		<% include partials/head %>
	</head>

	<body>
  <% include partials/menu %>
	  <main role="main" class="container">
	    <div class="container mt-5 mb-5">
		    <div class="row mb-3">
			    <div class="col-md-3">
				    <div class="card flex-md-row mb-4 box-shadow h-md-250">
		          <div class="card-body d-flex flex-column align-items-start">
						  <%if (account[0].photo) { %>
						  <img src="img/<%=account[0].photo%>" class="rounded-circle img-thumbnail">					
						  <%} else { %>
						  <img src="img/null.svg" class="rounded-circle img-thumbnail">
						  <%} %>
              <form action="updatephoto" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <div class="custom-file">
                    <input type="file" class="custom-file-input" name="file" id="customFile"/>
                    <label class="custom-file-label" for="customFile">Imagem</label>
                  </div>
                </div>
                <div class="btn-toolbar justify-content-between">
                  <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Trocar imagem</button>
                  </div>
                </div>
              </form>
		          </div>	                           
	          </div>		
			    </div>
			    <div class="col-md-6" style="border: none !important;">
            <form action="savenew" method="POST">
              <div class="card gedf-card" style="border: none !important;">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fa fa-user"></i>
                    </span>
                  </div>
                  <input type="text" name="fullname" value="<%=account[0].fullname%>" class="form-control" placeholder="Nome completo" aria-label="Nome completo" aria-describedby="basic-addon1" require/>
                </div>

                <div class="input-group mb-3">
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="fa fa-envelope"></i>
                    </span>
                  </div>
                  <input type="email" name="email" value="<%=account[0].email%>" class="form-control" placeholder="E-mail" aria-label="E-mail" aria-describedby="basic-addon2"/>
                </div>
                <div class="input-group mb-3">
                  <textarea class="form-control" name="description" aria-label="Descrição"><%- account[0].description%></textarea>
                </div>
                <br/>
                <label for="basic-url">Dados de acesso</label>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fa fa-lock"></i>
                    </span>
                  </div>
                  <input type="text" name="username" value="<%=account[0].username%>" class="form-control" id="basic-url" aria-describedby="basic-addon3" placeholder="Usuário" require/>
                  </div>

                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fa fa-lock"></i>
                    </span>
                  </div>
                  <input type="password" class="form-control" value="<%=account[0].password%>" placeholder="Senha" name="password" aria-label="Senha" require/>
                  </div>
                <div class="btn-group">
                  <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
              </div>
            </form>
			    </div>
		    </div>
		  </div>         
	  </main>
    <footer class="footer">
      <div class="container">
        <!-- FOOTER -->
      </div>
    </footer>
    <% include partials/footer %>
	</body>
</html>