
<!doctype html>
<html lang="pt-br">
  <head>
  <% include partials/head %>
  </head>

  <body>
    <div class="container-new container">
      <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
	      <h4 class="card-title mt-3 text-center">Cadastre-se</h4>
	      <p class="text-center">Crie uma conta gratuita</p>
          <form action="authnew" method="POST">
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
              </div>
              <input name="fullname" class="form-control" placeholder="Nome completo" type="text" required/>
            </div>
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
              </div>
              <input name="email" class="form-control" placeholder="E-mail" type="email" required/>
            </div>
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-building"></i> </span>
              </div>
              <select name="profile" class="form-control">
                <option selected="" required> Manda bem na cozinha ?</option>
                <% for(var i = 0; i < profile.length; i++){ %>
                <option value="<%= profile[i].id_profile %> "><%= profile[i].profile %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
              </div>
              <input name="username" class="form-control" placeholder="UsuÃ¡rio" type="text" required/>
            </div>
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
              </div>
              <input class="form-control" placeholder="Senha" name="password" type="password" required/>
            </div>
            <div class="form-group">
              <input type="submit" value="Criar Conta"/>
            </div>
            <p class="text-center">Tem conta ? <a href="/">Log In</a> </p>
          </form>
        </article>
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <!-- FOOTER -->
      </div>
    </footer>
    <% include partials/footer %>
  </body>
</html>